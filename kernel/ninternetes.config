# =========================
# NINTERNETES KERNEL CONFIG
# PowerPC / RAM only
# =========================

CONFIG_PPC=y
CONFIG_PPC32=y
CONFIG_6xx=y
CONFIG_ALTIVEC=n

CONFIG_EXPERT=y
CONFIG_EMBEDDED=y

# --- Boot ---
CONFIG_BLK_DEV_INITRD=y
CONFIG_INITRAMFS_SOURCE=""
CONFIG_DEVTMPFS=y
CONFIG_DEVTMPFS_MOUNT=y

# --- Console ---
CONFIG_SERIAL_8250=y
CONFIG_SERIAL_8250_CONSOLE=y
CONFIG_SERIAL_CORE=y
CONFIG_SERIAL_CORE_CONSOLE=y
CONFIG_PPC_UDBG=y
CONFIG_PPC_EARLY_DEBUG=y
CONFIG_PPC_PMAC=y
CONFIG_PMAC_ZILOG=y

# --- Memory ---
CONFIG_HIGHMEM=n
CONFIG_ZONE_DMA=y

# --- Filesystems ---
CONFIG_TMPFS=y
CONFIG_PROC_FS=y
CONFIG_SYSFS=y
CONFIG_PSEUDO_FS=y
CONFIG_TMPFS_POSIX_ACL=n
CONFIG_TMPFS_XATTR=n

# --- Networking (mínimo) ---
CONFIG_NET=y
CONFIG_INET=y
CONFIG_IPV6=n

# --- Devices (mínimo) ---
CONFIG_INPUT=y
CONFIG_INPUT_KEYBOARD=y
CONFIG_INPUT_MOUSE=y
CONFIG_ADB=y

# --- Disable everything heavy ---
CONFIG_MODULES=n
CONFIG_KALLSYMS=n
CONFIG_DEBUG_KERNEL=n
CONFIG_DEBUG_INFO=n
CONFIG_DEBUG_FS=n
CONFIG_FTRACE=n
CONFIG_KPROBES=n
CONFIG_BPF=n
CONFIG_BPF_SYSCALL=n

# --- No disks ---
CONFIG_BLOCK=n
CONFIG_SCSI=n
CONFIG_ATA=n

# --- No USB ---
CONFIG_USB=n

# --- No sound ---
CONFIG_SOUND=n

# --- No GPU crap ---
CONFIG_DRM=n
CONFIG_FB=n

